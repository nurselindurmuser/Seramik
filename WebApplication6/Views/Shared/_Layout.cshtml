                <script>
                    // When the user scrolls down 20px from the top of the document, show the button - Sayfayı yukarı çıkarır
                    window.onscroll = function () { scrollFunction() };

                    function scrollFunction() {
                        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                            document.getElementById("myBtn").style.display = "block";
                        } else {
                            document.getElementById("myBtn").style.display = "none";
                        }
                    }

                    // When the user clicks on the button, scroll to the top of the document - Detaylı ara
                    function topFunction() {
                        document.body.scrollTop = 0;
                        document.documentElement.scrollTop = 0;
                    }

                    function openNav() {
                        document.getElementById("myNav").style.height = "40%";
                    }

                    function closeNav() {
                        document.getElementById("myNav").style.height = "0%";
                    }

                    </script>
