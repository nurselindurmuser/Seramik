@model IList<Product>
@{
    ViewData["Title"] = "Index";
}

<section id="team">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">İşlem Yapınız.</h2>
            </div>
        </div>
        <div>
            <a asp-controller="Admin" asp-action="Create" class="btn btn-success">Yeni Ürün</a><br /><br />
            <table class="table table-striped table-hover">
                <tr>
                    <th>Id</th>
                    <th>Ad</th>
                    <th>Eylemler</th>
                </tr>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Title</td>
                        <td>
                            <a asp-area="" asp-controller="Admin" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-default">Düzenle</a>
                            <a asp-area="" asp-controller="Admin" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger" onclick="return confirm('Bu kaydı silmek istediğinze emin misiniz? Bu işlem geri alınamaz.');">Sil</a>
                        </td>
                    </tr>
                }
                
            </table>
        </div>
    </div>
</section>
