@model Contact
@{
    ViewData["Title"] = "Contact";
}



    <!-- Contact -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">İLETİŞİM</h2>
                </div>
            </div>
            <br />
            <div>
                <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src=https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d24908.855683381906!2d29.028956!3d40.989143!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x2d0fcf9b3fb8d79d!2sIT+Training+Center!5e1!3m2!1sen!2str!4v1510916904654"></iframe>

<br /><br />
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Contact" method="post" enctype="multipart/form-data" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="Name" class="form-control" type="text" placeholder="Adınız *" required data-validation-required-message="Lütfen adınızı giriniz.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control" type="email" placeholder="E-Postanız *" required data-validation-required-message="Lütfen e-postanızı giriniz.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Phone" class="form-control" type="tel" placeholder="Telefonunuz *" required data-validation-required-message="Lütfen telefonunuzu giriniz.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea asp-for="Message" class="form-control" placeholder="Mesajınız *" required data-validation-required-message="Lütfen mesajınızı giriniz."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Gönder</button>
                            </div>
                        </div>

                      @*</form>*@
                </div>
            </div>
        </div>
    </section>
