@model  IEnumerable<Product>
@{
    ViewData["Title"] = "Product";
}


<!-- Portfolio Grid -->
<section class="bg-light" id="portfolio" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">ÜRÜNLER</h2>
            </div>
        </div>
        <br />
        <div class="row">
            @foreach (var product in Model)
            {
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a class="portfolio-link" data-toggle="modal" href="#@product.Id">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img src="~/uploads/@product.Photo"  style="width:350px; height:400px;" />
                </a>
                <div class="portfolio-caption">
                    <h4>@product.Title</h4>
                </div>
            </div>
            }
           
            </div>
   

    @*Portfolio Modals*@
    @section scripts {
        @foreach (var product in Model)
        {
            <div class="portfolio-modal modal fade" id="@product.Id" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="close-modal" data-dismiss="modal">
                            <div class="lr">
                                <div class="rl"></div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 mx-auto">
                                    <div class="modal-body">
                                        <!-- Project Details Go Here -->
                                        <!-- Resimin gösterilmesi -->
                                        <h2 class="text-uppercase">@product.Title</h2>
                                        <img src="~/uploads/@product.Photo" style="width:550px; height:600px;" />
                                        <p>@product.Detail</p>
                                        <ul class="list-inline">
                                            <li>Kullanım Alanı: @product.UsageArea.GetDisplayName()</li>
                                            <li>Ebat: @product.Size.GetDisplayName()</li>
                                            <li>Rengi: @product.Color.GetDisplayName()</li>
                                            <li>Tarih: @product.Date</li>
                                        </ul>
                                        <button class="btn btn-primary" data-dismiss="modal" type="button" onClick="window.print();return false">Yazdır</button>
                                        <button class="btn btn-primary" data-dismiss="modal" type="button">
                                            <i class="fa fa-times"></i>Kapat
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
 </div>
</section>

